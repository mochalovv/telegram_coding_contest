<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:padding="16dp"
    tools:parentTag="android.widget.LinearLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ru.vmochalov.vkchart.chart.view.primary.PrimaryChartView
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ru.vmochalov.vkchart.chart.view.SelectedPointInfoView
            android:id="@+id/selectedPointInfoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:elevation="2dp"
            android:visibility="gone" />

    </FrameLayout>

    <ru.vmochalov.vkchart.chart.view.secondary.SecondaryChartView
        android:id="@+id/chartNavigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chartNavigationViewHeight"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</merge>